<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_history_article_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_view_round_corner"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/imageView_history_article_photo"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/image_view_round_corner"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/all_picture_placeholder" />

    <TextView
        android:id="@+id/textView_history_articles_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textColor="@color/grey_72"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_history_article_photo"
        app:layout_constraintTop_toTopOf="@+id/imageView_history_article_photo"
        tools:text="First Article: First time to make a cup of espresso." />

    <TextView
        android:id="@+id/textView_history_article_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:textColor="@color/grey_72"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="2018-10-21" />

</android.support.constraint.ConstraintLayout>